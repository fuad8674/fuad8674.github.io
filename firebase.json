{
  "database": {
    "rules": "database.rules.json",
    ".read": "auth != null",
    ".write": "auth != null"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}